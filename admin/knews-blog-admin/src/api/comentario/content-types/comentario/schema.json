{
  "kind": "collectionType",
  "collectionName": "comentarios",
  "info": {
    "singularName": "comentario",
    "pluralName": "comentarios",
    "displayName": "comentario",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "contenido": {
      "type": "text",
      "maxLength": 1000
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "user_coment"
    },
    "articulo": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::articulo.articulo"
    },
    "likes": {
      "type": "integer",
      "default": 0
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "pendiente",
        "aprobado",
        "rechazado",
        "spam"
      ],
      "default": "aprobado"
    }
  }
}
